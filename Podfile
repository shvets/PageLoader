use_frameworks!

target 'PageLoader_iOS' do
  platform :ios, '10.11'

  podspec :path => 'PageLoader.podspec'

  target 'PageLoader_iOSTests' do
    inherit! :search_paths
  end

end

target 'PageLoader_tvOS' do
  platform :tvos, '10.11'

  podspec :path => 'PageLoader.podspec'

  target 'PageLoader_tvOSTests' do
    inherit! :search_paths
  end
end

target 'PageLoader_macOS' do
  platform :osx, '10.11'

  podspec :path => 'PageLoader.podspec'

  target 'PageLoader_macOSTests' do
    inherit! :search_paths
  end
end

